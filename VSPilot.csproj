  <!-- Add this target to find and copy the DiagnosticSource assembly -->
  <Target Name="CopyDiagnosticSourceAssembly" BeforeTargets="Build">
    <PropertyGroup>
      <DiagnosticSourceVersion>9.0.2</DiagnosticSourceVersion>
      <DiagnosticSourcePackagePath>$(NuGetPackageRoot)system.diagnostics.diagnosticsource\$(DiagnosticSourceVersion)</DiagnosticSourcePackagePath>
    </PropertyGroup>
    <!-- Try to find the assembly in various possible locations -->
    <ItemGroup>
      <DiagnosticSourceLocations Include="$(DiagnosticSourcePackagePath)\lib\net6.0\System.Diagnostics.DiagnosticSource.dll" />
      <DiagnosticSourceLocations Include="$(DiagnosticSourcePackagePath)\lib\net462\System.Diagnostics.DiagnosticSource.dll" />
      <DiagnosticSourceLocations Include="$(DiagnosticSourcePackagePath)\lib\netstandard2.0\System.Diagnostics.DiagnosticSource.dll" />
      <DiagnosticSourceLocations Include="$(DiagnosticSourcePackagePath)\lib\net472\System.Diagnostics.DiagnosticSource.dll" />
      <DiagnosticSourceLocations Include="$(DiagnosticSourcePackagePath)\lib\netstandard2.1\System.Diagnostics.DiagnosticSource.dll" />
    </ItemGroup>
    <!-- Find the first existing file -->
    <PropertyGroup>
      <DiagnosticSourceDllPath>@(DiagnosticSourceLocations-&gt;Exists())</DiagnosticSourceDllPath>
    </PropertyGroup>
    <!-- Copy the file if found -->
    <Copy SourceFiles="$(DiagnosticSourceDllPath)" DestinationFolder="$(OutputPath)" SkipUnchangedFiles="true" Condition="Exists('$(DiagnosticSourceDllPath)')" />
    <!-- Show a warning if the file wasn't found -->
    <Warning Text="System.Diagnostics.DiagnosticSource.dll not found in any of the expected locations. Package loading may fail." Condition="!Exists('$(DiagnosticSourceDllPath)')" />
  </Target>
